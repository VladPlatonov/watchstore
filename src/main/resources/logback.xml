<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Відключення логування для пакету класів, встановлюючи рівень логування на OFF -->
  <logger name="com.rolex" level="OFF" />
  <logger name="com.rolex.service" level="ON" />

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
